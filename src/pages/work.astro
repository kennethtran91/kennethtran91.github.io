---
import Layout from "@/layouts/Layout.astro";
import Portfolio from "@/components/Portfolio.astro";

import projects from "@/data/projects";

import type { Project } from "@/data/projects";
type Props = Project;

const { title, techs, link, isComingSoon, description } = Astro.props;

// const formatTechs = (values: string[]) =>
//   values.toString().replaceAll(",", " â€¢ ");
---

<>
    <Layout>
        <main class="flex flex-col gap-20">
            <article
                class="flex flex-col gap-8 md:flex-row-reverse md:justify-end md:gap-12"
            >
                <div class="flex flex-col gap-8">
                    <h1 class="text-3xl text-neutral-100">Portfolio</h1>
                    <h3>
                        See my most recent projects below to get an idea of my
                        past experience.
                    </h3>
                </div>
            </article>
            <section class="flex gap-4">
                {
                    projects.length !== 0 &&
                        projects.map((project) => <Portfolio {...project} />)
                }
            </section>
        </main>
    </Layout>
</>
